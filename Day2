<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        //function--> A set of code will be executed whenever we call it.
        function example(){
            console.log("I'm preety good at C++.");
        }
        example();
        // for loop
        function e1(){
            for( i=0;i<=10;i++){
                console.log("I'm preety good at C++.");
            }
        }
        e1();
        // function with parameters
        function calc(num1,num2){
            console.log("The sum of inputs is: "+(num1+num2));
        }
        calc(40,60);
        calc("Ayush ","Kumar");
        // using prompt keyword we can get input from user. A dialogbox will be appeared when we run code.
        function multi(){
            var a=prompt("Enter the first number: ");
            var b=prompt("Enter the second number: ");
            console.log(a*b);
        }
        multi();
        function sum(){
            var a1=parseInt(prompt("Enter the first number: "));
            var b1=parseInt(prompt("Enter the second number: "));
            console.log(a1+b1);
        }
        sum();
        function machine(){
            a = prompt("Enter your name: ");
            console.log("My name is: "+a);
        }
        machine();
        // conditional statements
        function checkData(){
            var x=parseInt(prompt("Enter the first number: "));
            var y=parseInt(prompt("Enter the second number: "));
            if(x>y){
            console.log("First number is greater than second.");
            }
            else{
                console.log("Second number is greater than first.");
            }
        }
        checkData();
    </script>
</body>
</html>
